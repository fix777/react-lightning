{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "target": "es6",
    "lib": [
      "dom",
      "es7",
      "es2017.object"
    ]
  },
  "include": [
    "./src/**/*",
    // "./src/components/**/*", // For build
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
